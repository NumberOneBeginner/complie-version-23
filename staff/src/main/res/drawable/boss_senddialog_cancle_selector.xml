<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- pressed the button status   <stroke android:width="1sp" android:color="@color/setting_alertdialog_pressedbt" /> -->
	<shape>
	     <solid android:color="@color/white_color" />
            <stroke android:width="1sp" android:color="@color/setting_alertdialog_normalbt" />
		<padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
           
        </shape>
        
        </item>
    <item android:state_focused="true"> <!-- get the focus button sttaus   <stroke android:width="1sp" android:color="@color/setting_alertdialog_pressedbt" /> -->
		<shape>
		     <solid android:color="@color/white_color" />
            <stroke android:width="1sp" android:color="@color/setting_alertdialog_normalbt" />

           	<padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape>
        
    </item>
    <item> <!-- no focus the button status(the normal status button) -->
		<shape>
            <solid android:color="@color/white_color" />

            <stroke android:width="1sp" android:color="@color/setting_alertdialog_normalbt" />
	<padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
           
        </shape>
        
    </item>

</selector>