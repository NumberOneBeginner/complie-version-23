<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_nobgd"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_medium"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bt_nobgd"
                android:text="Medium"
                android:textColor="#62A2F4"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_large"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Large"
                android:background="@null"
                android:textColor="#62A2F4"
                android:textSize="18sp" />
        </LinearLayout>

        
    </LinearLayout>

    <Button
        android:id="@+id/item_popupwindows_cancel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/ll_popup"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_nobgd"
        android:text="cancel"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>