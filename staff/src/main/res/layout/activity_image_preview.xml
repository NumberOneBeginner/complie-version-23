    <RelativeLayout
        android:id="@+id/select_photo"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#f26647" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Select Photos"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/select_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="-5dp"
            android:src="@drawable/back2" />

        <Button
            android:id="@+id/nextbutton_select"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:enabled="false"
            android:text="Next"
            android:contentDescription="@null"
            android:textAllCaps="false"
            android:textColor="@color/nextbutton_beckground"
            android:textSize="18sp" />

    </RelativeLayout>

    <com.none.Push.uploadImage.domains.utils.ViewPagerFixed
        android:id="@+id/vp_photos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

