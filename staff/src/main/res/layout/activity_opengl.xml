<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.none.staff.activity.OpenglActivity" >

    <android.opengl.GLSurfaceView
        android:id="@+id/opengl_layout_surfaceview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="116dp"
        android:gravity="center"
        android:lineSpacingExtra="9dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="@string/face_member"
        android:textColor="#ffffff"
        android:textSize="18sp" />
   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="#8dbd3e" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#8dbd3e" >

        <ImageView
            android:id="@+id/face_back_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/face_laiseer"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/face_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/face_to" />
    </RelativeLayout>
 </RelativeLayout>
    <ImageView
        android:id="@+id/img_face_go"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_circle_red" >
    </ImageView>


</RelativeLayout>