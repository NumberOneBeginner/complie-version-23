<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collect_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_laisee_bg"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/green_sunandcloud_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dip"
        android:src="@drawable/green_laisee_sun" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/divide_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>
	<ImageView
        android:id="@+id/green_ground_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:orientation="vertical"
	    android:paddingBottom="35dp" >

	    <ImageView
	        android:layout_width="126dp"
	        android:layout_height="22dp"
	        android:layout_gravity="top|center"
	        android:layout_marginBottom="15dp"
	        android:src="@drawable/hsbc_logo" />

	    <View
	        android:layout_width="32dp"
	        android:layout_height="32dp"
	        android:layout_gravity="center"
	        android:layout_marginTop="15dp"
	        android:visibility="invisible" />
	</LinearLayout>
	
</RelativeLayout>