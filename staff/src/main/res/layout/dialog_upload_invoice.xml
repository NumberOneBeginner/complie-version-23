    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/successful_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
   <!--         >-->


            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/icon_successful" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Uploaded successfully"
                android:textColor="#828081"/>

            <Button
                android:id="@+id/ok_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="#f26647"
                android:text="OK" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/uploading_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/loading_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/icon_loading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Uploading file"
                android:textColor="#828081"/>

        </LinearLayout>
    </FrameLayout>

