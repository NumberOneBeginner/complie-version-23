     <!-- 自定义带下划线EditText的属性 -->
     <attr name="line_color" format="color"/>
     <attr name="line_height" format="dimension"/>
     <!-- 声明带下划线EditText的属性 -->
     <declare-styleable name="edittext_bg">
         <attr name="line_color"/>
         <attr name="line_height"/>
     </declare-styleable>
     
     
     
      <declare-styleable name="SoundWaveBackground">
        <attr name="rb_color" format="color" />
        <attr name="rb_strokeWidth" format="dimension"/>
        <attr name="rb_radius" format="dimension"/>
        <attr name="rb_duration" format="integer"/>
        <attr name="rb_rippleAmount" format="integer"/>
        <attr name="rb_scale" format="float"/>
        <attr name="rb_type" format="enum">
            <enum name="fillRipple" value="0"/>
            <enum name="strokeRipple" value="1"/>
        </attr>
    </declare-styleable>
    
    
    
    
    
    
       <!-- 开关按钮属性 -->
    <declare-styleable name="SwitchButton">
        <attr name="bg_off" format="reference"></attr>  <!-- 关闭时的背景图片 -->
        <attr name="bg_on" format="reference"></attr>   <!-- 打开时的背景图片 -->
        <attr name="bg_button" format="reference"></attr>   <!-- 按钮图片 -->
    </declare-styleable>
    
    <!-- 环形进度条按钮属性 -->
    <declare-styleable name="CircleProgressBar">  
        <attr name="max" format="integer"/>				<!-- 进度条最大值 -->
        <attr name="fill" format="boolean"/>			<!-- 是否填充圆形区域 -->
        <attr name="Paint_Width" format="dimension"/>		<!-- 画笔宽度，填充模式下无效，会被重置为0 -->
        <attr name="Paint_Color" format="integer"/>		<!-- 画笔颜色 -->
        <attr name="Inside_Interval" format="dimension"/> <!-- 圆形区域向里缩进的距离 --> 
    </declare-styleable> 
</resources>
